<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="clothes_system.CustomerController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="200" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="Menu" style="-fx-text-fill: white; -fx-font-size: 18;"/>

            <Button fx:id="btnViewCustomers" text="View Customers" prefWidth="150"/>
            <Button fx:id="btnSearchCustomers" text="Search Customer" prefWidth="150"/>
            <Button fx:id="btnManageCustomers" text="Manage Customers" prefWidth="150"/>
        </VBox>
    </left>

    <!-- Content area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ecf0f1; -fx-padding: 20;" />
    </center>

</BorderPane>

